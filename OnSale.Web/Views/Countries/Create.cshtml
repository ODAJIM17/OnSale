@model OnSale.Common.Entities.Country

@{
    ViewData["Title"] = "Create";
}



<h4>Add New Country</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <partial name="_Country" />
            <div class="form-group">
                <button type="submit" class="btn btn-sm btn-primary"><i class="fas fa-plus-circle"></i> Create</button>
                <a class="btn btn-sm btn-success" asp-action="Index"><i class="fas fa-redo"></i> Back to List</a>
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
